{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "block-scoped-var": "error",
        "curly": "error",
        "no-empty-function": "error",
        "no-magic-numbers": "error",
        "no-multi-spaces": ["error", { "ignoreEOLComments": false }]
    }
}